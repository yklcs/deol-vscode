{
  "name": "deol-vscode",
  "displayName": "Deol Color Theme",
  "description": "Deol color theme for VSCode",
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Themes"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yklcs/deol-vscode"
  },
  "icon": "icon.png",
  "scripts": {
    "build": "tsc && node ./out/scripts/build.js",
    "watch": "tsc -w & nodemon -w out ./out/scripts/build.js",
    "publish": "pnpm vsce publish",
    "package": "pnpm build && pnpm vsce package",
    "install": "pnpm package && code --install-extension *.vsix"
  },
  "contributes": {
    "themes": [
      {
        "label": "deol-vscode",
        "uiTheme": "vs-dark",
        "path": "./themes/deol-vscode-color-theme.json"
      }
    ]
  },
  "devDependencies": {
    "@types/chroma-js": "^2.4.0",
    "@types/node": "^18.13.0",
    "nodemon": "^2.0.20",
    "typescript": "^4.9.5",
    "chroma-js": "^2.4.2"
  }
}
